<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- The main content view -->

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <!-- Add content here -->
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/fam_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nine heirs reach YA"/>
            <CheckBox
                android:id="@+id/fam_cb0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample"/>
            <CheckBox
                android:id="@+id/fam_cb1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample"/>
            <CheckBox
                android:id="@+id/fam_cb2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample"/>
            <CheckBox
                android:id="@+id/fam_cb3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample"/>
            <CheckBox
                android:id="@+id/fam_cb4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample"/>
            <CheckBox
                android:id="@+id/fam_cb5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample"/>
            <CheckBox
                android:id="@+id/fam_cb6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample"/>
            <CheckBox
                android:id="@+id/fam_cb7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample"/>
            <CheckBox
                android:id="@+id/fam_cb8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fam_title2"/>
            <!-- For "One Sim has 10 kids"-->
            <CheckBox
                android:id="@+id/fam_cb9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample"/>
        </LinearLayout>
    </FrameLayout>

    <!-- The navigation drawer -->

    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#d6d6d6"
        android:choiceMode="singleChoice"
        android:divider="#e5e5e5"
        android:dividerHeight="1dp" />

</android.support.v4.widget.DrawerLayout>