<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- The main content view -->

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <!-- Add content here -->
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">
            <TextView
                android:id="@+id/ath_points_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Points"
                android:textSize="30dp"/>

            <TextView
                android:id="@+id/ath_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total number of aspirations completed"
                android:paddingBottom="10dp"/>
            <CheckBox
                android:id="@+id/ath_cb0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 aspiration"/>
            <CheckBox
                android:id="@+id/ath_cb1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 aspirations"/>
            <CheckBox
                android:id="@+id/ath_cb2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 aspirations"/>
            <CheckBox
                android:id="@+id/ath_cb3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 aspirations"/>
            <CheckBox
                android:id="@+id/ath_cb4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8 aspirations"/>
            <CheckBox
                android:id="@+id/ath_cb5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13 aspirations"/>
            <CheckBox
                android:id="@+id/ath_cb6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21 aspirations"/>
            <CheckBox
                android:id="@+id/ath_cb7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="34 aspirations"/>
            <CheckBox
                android:id="@+id/ath_cb8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="55 aspirations"/>
            <CheckBox
                android:id="@+id/ath_cb9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Every aspiration completed"/>
        </LinearLayout>
    </FrameLayout>

    <!-- The navigation drawer -->

    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#d6d6d6"
        android:choiceMode="singleChoice"
        android:divider="#e5e5e5"
        android:dividerHeight="1dp" />

</android.support.v4.widget.DrawerLayout>