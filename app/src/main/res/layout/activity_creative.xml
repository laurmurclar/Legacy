<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- The main content view -->

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <!-- Add content here -->
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">
            <TextView
                android:id="@+id/cre_points_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Points"
                android:textSize="30dp"/>

            <TextView
                android:id="@+id/cre_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Heir and Spouse Memorialised"
                android:paddingBottom="10dp"/>
            <CheckBox
                android:id="@+id/cre_cb0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample"/>
            <CheckBox
                android:id="@+id/cre_cb1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample"/>
            <CheckBox
                android:id="@+id/cre_cb2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample"/>
            <CheckBox
                android:id="@+id/cre_cb3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample"/>
            <CheckBox
                android:id="@+id/cre_cb4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample"/>
            <CheckBox
                android:id="@+id/cre_cb5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample"/>
            <CheckBox
                android:id="@+id/cre_cb6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample"/>
            <CheckBox
                android:id="@+id/cre_cb7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample"/>
            <CheckBox
                android:id="@+id/cre_cb8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample"/>
            <TextView
                android:id="@+id/cre_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cre_title2"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"/>
            <CheckBox
                android:id="@+id/cre_cb9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Two completed"/>
        </LinearLayout>
    </FrameLayout>

    <!-- The navigation drawer -->

    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#d6d6d6"
        android:choiceMode="singleChoice"
        android:divider="#e5e5e5"
        android:dividerHeight="1dp" />

</android.support.v4.widget.DrawerLayout>