<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- The main content view -->

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <!-- Add content here -->
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">
            <TextView
                android:id="@+id/dev_points_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Points"
                android:textSize="30dp"/>

            <TextView
                android:id="@+id/dev_potion_count_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/dev_neg_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"/>
                <Button
                    android:id="@+id/dev_pos_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"/>
            </LinearLayout>
            <CheckBox
                android:id="@+id/dev_cb0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 potion of youth"/>
            <CheckBox
                android:id="@+id/dev_cb1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 potions of youth"/>
            <CheckBox
                android:id="@+id/dev_cb2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 potions of youth"/>
            <CheckBox
                android:id="@+id/dev_cb3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 potions of youth"/>
            <CheckBox
                android:id="@+id/dev_cb4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8 potions of youth"/>
            <CheckBox
                android:id="@+id/dev_cb5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 potions of youth"/>
            <CheckBox
                android:id="@+id/dev_cb6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20 potions of youth"/>
            <CheckBox
                android:id="@+id/dev_cb7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30 potions of youth"/>
            <CheckBox
                android:id="@+id/dev_cb8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50 potions of youth"/>
            <CheckBox
                android:id="@+id/dev_cb9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="80 potions of youth"/>
        </LinearLayout>
    </FrameLayout>

    <!-- The navigation drawer -->

    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#d6d6d6"
        android:choiceMode="singleChoice"
        android:divider="#e5e5e5"
        android:dividerHeight="1dp" />

</android.support.v4.widget.DrawerLayout>