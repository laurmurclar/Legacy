<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- The main content view -->

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <!-- Add content here -->
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/kno_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total number of maxed skills"
                android:paddingBottom="10dp"/>
            <CheckBox
                android:id="@+id/kno_cb0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 skills"/>
            <CheckBox
                android:id="@+id/kno_cb1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 skills"/>
            <CheckBox
                android:id="@+id/kno_cb2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8 skills"/>
            <CheckBox
                android:id="@+id/kno_cb3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13 skills"/>
            <CheckBox
                android:id="@+id/kno_cb4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21 skills"/>
            <CheckBox
                android:id="@+id/kno_cb5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="34 skills"/>
            <CheckBox
                android:id="@+id/kno_cb6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="55 skills"/>
            <CheckBox
                android:id="@+id/kno_cb7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="89 skills"/>
            <CheckBox
                android:id="@+id/kno_cb8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="144 skills"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Every skill maxed"/>
            <CheckBox
                android:id="@+id/kno_cb9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All dem"/>
        </LinearLayout>
    </FrameLayout>

    <!-- The navigation drawer -->

    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#d6d6d6"
        android:choiceMode="singleChoice"
        android:divider="#e5e5e5"
        android:dividerHeight="1dp" />

</android.support.v4.widget.DrawerLayout>